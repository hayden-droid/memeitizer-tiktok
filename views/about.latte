{layout '../layouts/default.latte'}

{block header}
	<p class="title">Welcome to Proxitok!</p>
	<p class="subtitle">
    Made with <span style="color: #e25555;">&#9829;</span> in <a href="https://github.com/pablouser1/ProxiTok">Github</a>
	</p>
